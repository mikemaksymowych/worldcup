doctype html

html
	head
		link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")
		link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css", rel="stylesheet")
		style body { padding-top: 80px; word-wrap: break-word }

		title Super World Cup

	body
		div(class = "container")
			div(class = "page-header text-center")
				h1
					span(class = "fa fa-anchor")
					| &nbsp; Matches
				br
				| You have #{user.points} points
				hr

				each m, i in matches
					img(src = "/static/flags/#{m.team_1_img}")
					| &nbsp; #{m.team_1} (#{m.team_1_odds})
					| &nbsp; vs. &nbsp;
					img(src = "/static/flags/#{m.team_2_img}")
					| &nbsp; #{m.team_2} (#{m.team_2_odds})
					br
					br
					| Draw (#{m.draw_odds})
					br
					br
					| #{m.datetime}

				hr
				a(href = "/profile") Back to Profile

